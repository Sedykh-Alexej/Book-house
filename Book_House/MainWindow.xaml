            <Image Source="Resources/kisspng-feathers-the-evolution-of-a-natural-miracle-paper-books-and-quill-5aa60df15026c6.5346314415208319853283.png" HorizontalAlignment="Right" Width="239" Margin="0,28,25,0"/>
            <TextBlock Text="Книжный дом" Style="{DynamicResource CustomFont}"></TextBlock>
            <Button  Foreground="Red" Style="{DynamicResource ButtonStyle}" Content="x" Margin="1008,0,0,167" FontSize="24" Click="Button_click" Height="28" Width="28"></Button>
            <Button  Foreground="Red" Style="{DynamicResource ButtonStyle}"  Content="_" Margin="958,0,50,167" FontSize="24" Click="Min_But" Height="28" Width="28" RenderTransformOrigin="0.758,0.19"></Button>
